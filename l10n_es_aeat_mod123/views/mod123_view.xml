                                    string="(show move lines)"
                                    type="object"
                                    context="{'move_lines03': True}"
                            />
                        </group>
                        <group string="Periodificaci贸n">
                            <field name="casilla_04"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                            />
                            <field name="casilla_05"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                            />
