            <field name="act_window_id" ref="action_l10n_es_aeat_mod123_report"/>
        </record>

        <menuitem id="menu_aeat_mod123_report"
                  parent="l10n_es_aeat.menu_root_aeat"
                  action="action_l10n_es_aeat_mod123_report"
                  sequence="123"
                  name="Modelo 123"/>
