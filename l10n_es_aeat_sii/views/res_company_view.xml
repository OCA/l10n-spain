<openerp>
    <data>
        <record id="view_company_sii_form" model="ir.ui.view">
            <field name="name">res.company.sii.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <page string="Configuration" position="inside">
                    <separator name="aeat_sii_config" string="AEAT SII Configuration"/>

                    <group colspan="4" col="4">
                        <field name="sii_enabled"/>
                    </group>
                    <group colspan="4" col="4" attrs="{'invisible': [('sii_enabled', '=', False)]}">
                        <field name="chart_template_id"
                               attrs="{'required': [('sii_enabled', '=', True)]}"/>
                        <field name="sii_test"/>
                        <field name="sii_method"/>
                        <newline/>
                        <group name="sii_description">
                            <separator string='Description Config'/>
                            <newline/>

                            <field name="sii_description_method"/>
                            <field name="sii_description"
                                   attrs="{'invisible': [('sii_description_method', '!=', 'fixed')]}"/>
                            <field name="sii_header_customer"/>
                            <field name="sii_header_supplier"/>
                        </group>
                    </group>
                </page>
            </field>
        </record>
    </data>
</openerp>
