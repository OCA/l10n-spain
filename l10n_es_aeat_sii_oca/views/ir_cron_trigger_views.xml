<odoo>
    <record id="view_cron_trigger_sii" model="ir.ui.view">
        <field name="model">ir.cron.trigger</field>
        <field name="priority" eval="9999" />
        <field name="arch" type="xml">
            <tree>
                <field name="cron_id" />
                <field name="call_at" />
                <button
                    type="object"
                    name="reschedule_sudo"
                    string="Reschedule"
                    class="oe_highlight"
                />
                <button
                    type="object"
                    name="cancel_now"
                    string="Cancel sending"
                    icon="fa-times-circle"
                />
                <button
                    type="object"
                    name="do_now"
                    string="Send now"
                    icon="fa-fighter-jet"
                />
            </tree>
        </field>
    </record>
</odoo>
