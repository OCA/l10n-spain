<odoo>
    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="%(delivery_cttexpress.action_delivery_cttexpress_pickup_wizard)d"
                    type="action"
                    class="oe_stat_button"
                    icon="fa-truck"
                    string="Pickup request"
                    context="{'default_carrier_id': active_id}"
                    attrs="{'invisible': [('delivery_type', '!=', 'cttexpress')]}"
                />
            </xpath>
            <xpath expr="//notebook/page[1]" position='before'>
                <page
                    string="CTT Express Configuration"
                    attrs="{'invisible': [('delivery_type', '!=', 'cttexpress')]}"
                >
                    <group>
                        <group string="Connection">
                            <field
                                name="cttexpress_user"
                                attrs="{'required': [('delivery_type', '=', 'cttexpress')]}"
                            />
                            <field
                                name="cttexpress_password"
                                password="True"
                                attrs="{'required': [('delivery_type', '=', 'cttexpress')]}"
                            />
                            <field
                                name="cttexpress_agency"
                                attrs="{'required': [('delivery_type', '=', 'cttexpress')]}"
                            />
                            <field
                                name="cttexpress_customer"
                                attrs="{'required': [('delivery_type', '=', 'cttexpress')]}"
                            />
                            <field
                                name="cttexpress_contract"
                                attrs="{'required': [('delivery_type', '=', 'cttexpress')]}"
                            />
                            <button
                                name="action_ctt_validate_user"
                                type="object"
                                string="Test connection"
                                class="oe_link"
                                icon="fa-plug"
                            />
                        </group>
                        <group string="Shipping">
                            <field
                                name="cttexpress_shipping_type"
                                attrs="{'required': [('delivery_type', '=', 'cttexpress')]}"
                            />
                        </group>
                        <group string="Label format">
                            <field 
                                name="cttexpress_document_model_code"
                                attrs="{'required': [('delivery_type', '=', 'cttexpress')]}"
                            />
                            <field 
                                name="cttexpress_document_format"
                                attrs="{'required': [('delivery_type', '=', 'cttexpress')]}"
                            />
                            <field 
                                name="cttexpress_document_offset"
                                attrs="{'required': [('delivery_type', '=', 'cttexpress')]}"
                            />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
