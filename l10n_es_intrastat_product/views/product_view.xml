<openerp>
<data>

<!-- Add field on product.supplierinfo -->
<record id="product_supplierinfo_form_view" model="ir.ui.view">
    <field name="name">es.intrastat.product.product.supplierinfo.form</field>
    <field name="model">product.supplierinfo</field>
    <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
    <field name="arch" type="xml">
        <field name="product_uom" position="after">
            <field name="origin_country_id" />
        </field>
    </field>
</record>

<!-- Add the field intrastat_label on product UoM -->
<record id="product_uom_form_view" model="ir.ui.view">
    <field name="name">es.intrastat.product.uom.form</field>
    <field name="model">product.uom</field>
    <field name="inherit_id" ref="product.product_uom_form_view" />
    <field name="arch" type="xml">
        <field name="category_id" position="after">
            <field name="intrastat_label"
                groups="l10n_es_intrastat_product.group_detailed_intrastat_product"/>
        </field>
    </field>
</record>


</data>
</openerp>
