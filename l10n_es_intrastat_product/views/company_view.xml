<data>

<record id="view_company_form" model="ir.ui.view">
    <field name="name">es.intrastat.product.company.form</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="intrastat_base.view_company_form" />
    <field name="arch" type="xml">
        <group name="intrastat-common" position="after">
            <group string="Settings for declaration">
                <label string="Don't forget to add users to the 'Detailed Intrastat Product' group." colspan="2" />
                <field name="default_intrastat_transport" groups="l10n_es_intrastat_product.group_detailed_intrastat_product"/>
                <field name="default_intrastat_state" groups="l10n_es_intrastat_product.group_detailed_intrastat_product"/>
                <field name="default_intrastat_type_out_invoice" domain="[('object_type', '=', 'out_invoice')]" />
                <field name="default_intrastat_type_out_refund" domain="[('object_type', '=', 'out_refund')]" />
                <field name="default_intrastat_type_in_invoice" domain="[('object_type', '=', 'in_invoice')]" />
                <field name="default_intrastat_type_in_refund" domain="[('object_type', '=', 'in_refund')]" />
                <field name="default_incoterm"/>
            </group>
        </group>
    </field>
</record>


</data>
