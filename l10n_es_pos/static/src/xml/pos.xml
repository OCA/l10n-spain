<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="PosTicket">
        <t t-jquery=".pos-center-align t:first" t-operation="after">
            <br/>
            <t t-if="order.simplified">
                Simplified invoice
            </t>
            <t t-if="!order.simplified">
                Invoice
            </t>
            <t t-esc="order.get('sequence_ref')"/>
            <br/>
        </t>
        <t t-jquery="[t-esc='widget.pos.company.name']" t-operation="after">
            <br />VAT: <t t-esc="widget.pos.company.vat || ''"/>
        </t>
        <t t-jquery="[t-esc='widget.pos.shop.name']" t-operation="after">
            <t t-if="order.attributes.client">
                <br/><br/>
                <span class="customer_title">Customer data</span><br />
                Name: <t t-esc="order.attributes.client.name ? order.attributes.client.name : ''"/><br />
                VAT: <t t-esc="order.attributes.client.vat ? order.attributes.client.vat : ''"/><br />
                Address: <t t-esc="order.attributes.client.street ? order.attributes.client.street : ''"/>
            </t>
        </t>
        <t t-jquery="[t-esc='widget.format_currency(order.getSubtotal())']" t-operation="replace">
            <t t-esc="widget.format_currency(order.getTotalTaxExcluded())"/>
        </t>
    </t>
    
	<t t-extend="XmlReceipt">
        <t t-jquery="[t-if='!receipt.company.logo']" t-operation="after">
            <br/>
            <t t-if="receipt.simplified">
                Simplified invoice
            </t>
            <t t-if="!receipt.simplified">
                Invoice
            </t>
            <t t-esc="receipt.sequence_ref"/>
            <br/>
        </t>
		<t t-jquery="[t-if='receipt.header']" t-operation="after">
            <t t-if="receipt.client_data">
                <br/>
	                <span class="customer_title">Customer data</span><br />
	                Name: <t t-esc="receipt.client_data.name ? receipt.client_data.name : ''"/><br />
	                VAT: <t t-esc="receipt.client_data.vat ? receipt.client_data.vat : ''"/><br />
	                Address: <t t-esc="receipt.client_data.street ? receipt.client_data.street : ''"/>
            </t>
		</t>
	</t>
    
</templates>
