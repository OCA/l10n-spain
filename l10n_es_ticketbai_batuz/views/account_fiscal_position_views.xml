<odoo>

    <record id="view_account_position_form_inherit_l10n_es_ticketbai_batuz" model="ir.ui.view">
        <field name="name">account.fiscal.position.form.batuz</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='tbai_vat_regime']/group[@name='tbai_vat_regimes']" position="after">
                <group name="tbai_vat_regimes_purchase" string="VAT Regimes Purchase">
                    <field name="tbai_vat_regime_purchase_key" options="{'no_open':True,'no_create':True}"/>
                    <field name="tbai_vat_regime_purchase_key2" options="{'no_open':True,'no_create':True}"/>
                    <field name="tbai_vat_regime_purchase_key3" options="{'no_open':True,'no_create':True}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_account_position_template_form_inherit_l10n_es_ticketbai_batuz" model="ir.ui.view">
        <field name="name">account.fiscal.position.template.form.batuz</field>
        <field name="model">account.fiscal.position.template</field>
        <field name="inherit_id" ref="account.view_account_position_template_form"/>
        <field name="arch" type="xml">
            <field name="tbai_vat_regime_key3" position="after">
                <field name="tbai_vat_regime_purchase_key" options="{'no_open':True,'no_create':True}"/>
                <field name="tbai_vat_regime_purchase_key2" options="{'no_open':True,'no_create':True}"/>
                <field name="tbai_vat_regime_purchase_key3" options="{'no_open':True,'no_create':True}"/>
            </field>
        </field>
    </record>

</odoo>
