<odoo>

    <record id="product_template_form_view_inherit_l10n_es_aeat_mod592" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='volume']" position="after">
                <label for="is_plastic_tax" />
                <div class="o_row" name="volume">
                    <field name="is_plastic_tax" />
                </div>
            </xpath>
             <xpath expr="//group[@name='group_lots_and_weight']" position="after">
                <group name="plastic_tax" string="Plastic Tax Parameters" col="4" colspan="4"
                    attrs="{'invisible': [('is_plastic_tax', '=', False)]}">
                    <field name="tax_plastic_type" attrs="{'required': [('is_plastic_tax', '=', True)]}"/>
                    <field name="product_plastic_tax_weight"
                        attrs="{'required': [('is_plastic_tax', '=', True)]}" />
                    <field name="product_plastic_weight_non_recyclable"
                        attrs="{'required': [('is_plastic_tax', '=', True)]}" />
                    <field name="product_plastic_type_key"/>
                    <field name="product_plastic_tax_regime_manufacturer"
                        attrs="{'invisible': [('tax_plastic_type', '=', 'acquirer')]}" />
                    <field name="product_plastic_tax_regime_acquirer"
                        attrs="{'invisible': [('tax_plastic_type', '=', 'manufacturer')]}" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
