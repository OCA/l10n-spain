<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_partner_account_code_form">
        <field name="name">view.partner.account.code.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='purchase']" position="after">
                <field name="supplier_rank" invisible="1" />
                <group
                    string="Subcontractor Certificate"
                    attrs="{'invisible': [('supplier_rank', '&lt;', 1)]}"
                >
                    <field
                        name="certificate_required"
                        string="Is Subcontractor Certificate"
                    />
                    <field
                        name="certificate_expiration_aeat"
                        attrs="{'invisible': [('certificate_required','=',False)]}"
                    />
                    <field
                        name="certificate_expiration_ss"
                        attrs="{'invisible': [('certificate_required','=',False)]}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
