<?xml version="1.0" ?>
<odoo>
    <template
        id="slide_main"
        inherit_id="website_slides.slide_main"
        name="website_slides.slide_main"
    >
        <xpath
            expr="//div[@class='row align-items-end align-items-md-stretch']/div"
            position="attributes"
        >
            <attribute
                name="t-attf-class"
            >col-12 col-lg-9 d-flex flex-column #{'offset-lg-3' if slide.channel_id.channel_type != 'documentation' else ''}</attribute>
        </xpath>
        <xpath
            expr="//div[@class='container o_wslides_lesson_main']/div/div/t"
            position="attributes"
        >
            <attribute
                name="t-if"
            >slide.channel_id.channel_type != 'documentation'</attribute>
        </xpath>
    </template>
    <template
        id="slide_content_detailed"
        inherit_id="website_slides.slide_content_detailed"
        name="website_slides.slide_content_detailed"
    >
        <xpath expr="//t[@t-set='is_training_channel']" position="attributes">
            <attribute
                name="t-value"
            >slide.channel_id.channel_type != 'documentation'</attribute>
        </xpath>
        <xpath expr="//t[@t-set='disable_composer']" position="attributes">
            <attribute
                name="t-value"
            >not (slide.channel_id.can_comment and slide.channel_id.allow_comment and slide.channel_id.channel_type != 'documentation')</attribute>
        </xpath>
    </template>
</odoo>
