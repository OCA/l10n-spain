<?xml version="1.0" ?>
<odoo>
    <record id="slide_slide_view_form" model="ir.ui.view">
        <field name="name">website_slides.slide_form</field>
        <field name="model">slide.slide</field>
        <field name="inherit_id" ref="website_slides.view_slide_slide_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='url']" position="attributes">
                <attribute name="attrs">{
                    'required': [('slide_type', 'in', ('video')), ('slide_type', 'in', ('teleconference'))],
                    'invisible': [('slide_type', 'not in', ('video')), ('slide_type', 'not in', ('teleconference'))]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='likes']" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('channel_type', '!=', 'documentation')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='dislikes']" position="attributes">
                <attribute name="attrs">{'invisible': [('channel_type', '!=', 'documentation')]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
