<?xml version="1.0" ?>
<odoo>
    <template
        id="course_main" 
        inherit_id="website_slides.course_main" 
        name="website_slides.course_main"
    >
        <xpath expr="//div[@id='wrap']/div" position="attributes">
            <attribute
                name="t-attf-class"
            >o_wslides_course_header o_wslides_gradient position-relative text-white pb-md-0 pt-2 pt-md-5 #{'pb-3' if channel.channel_type != 'documentation' else 'o_wslides_course_doc_header pb-5'}
            </attribute>
        </xpath>
        <xpath expr="//img" position="attributes">
            <attribute
                name="t-att-src"
            >'/website_slides/static/src/img/channel-%s-default.jpg' % ('documentation' if channel.channel_type == 'documentation' else 'training')
            </attribute>
        </xpath>
        <xpath
            expr="//div[@class='o_wslides_course_main']/div"
            position="attributes">
            <attribute name="t-if">channel.channel_type != 'documentation'</attribute>
        </xpath>
        <xpath
            expr="//div[@class='tab-content py-4 o_wslides_tabs_content mb-4']/div/t"
            position="attributes"
        >
            <attribute name="t-if">channel.channel_type != 'documentation'</attribute>
        </xpath>
    </template>
</odoo>
