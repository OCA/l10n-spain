<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_scrap_form_view" model="ir.ui.view">
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="silicie_product_type" invisible="True"/>
                <field name="silicie_loss_id" attrs="{'required': [('silicie_product_type', '!=', 'none')]}" widget="selection"/>
                <field name="silicie_move_type_id" attrs="{'required': [('silicie_product_type', '!=', 'none')]}" widget="selection"/>
            </field>
        </field>
    </record>
    <record id="stock_scrap_form_view2" model="ir.ui.view">
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view2"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="silicie_product_type" invisible="True"/>
                <field name="silicie_loss_id" attrs="{'required': [('silicie_product_type', '!=', 'none')]}" widget="selection"/>
                <field name="silicie_move_type_id" attrs="{'required': [('silicie_product_type', '!=', 'none')]}" widget="selection"/>
            </field>
        </field>
    </record>
</odoo>
