<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- Views -->
<record id="level_list" model="ir.ui.view">
    <field name="name">Study Level List</field>
    <field name="model">l10n_es_partner_study_level.level</field>
    <field name="priority" eval="1"/>
    <field name="arch" type="xml">
        <tree string="Study Level List" editable="bottom">
            <field name="number"/>
            <field name="name"/>
        </tree>
    </field>
</record>

<record id="level_search" model="ir.ui.view">
    <field name="name">Study Level Search</field>
    <field name="model">l10n_es_partner_study_level.level</field>
    <field name="priority" eval="1"/>
    <field name="arch" type="xml">
        <search>
            <field name="number"/>
            <field name="name"/>
        </search>
    </field>
</record>

<!-- Menus -->
<record id="level_list_action" model="ir.actions.act_window">
    <field name="name">Study Level List</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">l10n_es_partner_study_level.level</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="level_list"/>
    <field name="search_view_id" ref="level_search"/>
</record>

<menuitem
    id="level_menu"
    name="Study Levels"
    parent="base.menu_config_address_book"
    groups="base.group_no_one"
    action="level_list_action"/>

</data>
</openerp>
