<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='l10n_es_edi_test_env']/parent::div" position="before">
                <div class="o_row">
                    <label for="l10n_es_verifactu_enabled" class="o_light_label"/>
                    <field name="l10n_es_verifactu_enabled"/>
                </div>
                <div attrs="{'invisible': [('l10n_es_verifactu_enabled', '=', False)]}">
                    <div class="content-group mt16">
                        <label for="config_verifactu_developer_name" class="o_light_label"/>
                        <field name="config_verifactu_developer_name"
                               attrs="{'required': [('l10n_es_verifactu_enabled', '!=', False)]}"/>
                    </div>
                    <div class="content-group">
                        <label for="config_verifactu_developer_id" class="o_light_label"/>
                        <field name="config_verifactu_developer_id"
                               attrs="{'required': [('l10n_es_verifactu_enabled', '!=', False)]}"/>
                    </div>
                    <div class="content-group">
                        <label for="config_verifactu_software_id" class="o_light_label"/>
                        <field name="config_verifactu_software_id"
                               attrs="{'required': [('l10n_es_verifactu_enabled', '!=', False)]}"/>
                    </div>
                    <div class="content-group">
                        <label for="config_verifactu_software_name" class="o_light_label"/>
                        <field name="config_verifactu_software_name"
                               attrs="{'required': [('l10n_es_verifactu_enabled', '!=', False)]}"/>
                    </div>
                    <div class="content-group">
                        <label for="config_verifactu_software_number" class="o_light_label"/>
                        <field name="config_verifactu_software_number"
                               attrs="{'required': [('l10n_es_verifactu_enabled', '!=', False)]}"/>
                    </div>
                    <div class="content-group">
                        <label for="config_verifactu_software_version" class="o_light_label"/>
                        <field name="config_verifactu_software_version"
                               attrs="{'required': [('l10n_es_verifactu_enabled', '!=', False)]}"/>
                    </div>
                    <div class="content-group mt16"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
