<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="account_tax_code_prorrata_form">
            <field name="name">account.tax.code.prorrata.form</field>
            <field name="model">account.tax.code</field>
            <field name="inherit_id" ref="account.view_tax_code_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="before">
                    <field name="prorrata_tax_type" required="1"/>
                </field>
            </field>
        </record>
        <record id="account_tax_code_template_prorrata_form" model="ir.ui.view">
            <field name="name">account.tax.code.template.prorrata.form</field>
            <field name="model">account.tax.code.template</field>
            <field name="inherit_id" ref="account.view_tax_code_template_form"/>
            <field name="arch" type="xml">
                <field name="sign" position="after">
                    <field name="prorrata_tax_type"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
