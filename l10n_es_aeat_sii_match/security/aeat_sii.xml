<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <record id="l10n_es_aeat_sii.queue_job_sii_rule" model="ir.rule">
        <field name="domain_force">['|', ('channel', '=', 'root.invoice_validate_sii'), '|', ('channel', '=', 'root.invoice_contrast_aeat'), ('channel', '=', 'root.get_invoice_aeat')]</field>
    </record>

    <record id="sii_match_multi_company_rule" model="ir.rule">
        <field name="name">AEAT SII match multi-company</field>
        <field name="model_id" ref="model_l10n_es_aeat_sii_match_report"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'child_of', [user.company_id.id])]</field>
    </record>

</odoo>
