<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>    
	  <!-- Ficha -->
	  <record model="ir.ui.view" id="l10n_es_facturae.res_company_form">
      <field name="name">l10n_es_facturae.res.company.form</field>
	    <field name="model">res.company</field>
	    <field name="inherit_id" ref="base.view_company_form"/>
	    <field name="type">form</field>
	    <field name="arch" type="xml"> 
        <xpath expr="//notebook/page[@string='Configuration']" position="after">
          <page string='FACe'>
            <label for="facturae_cert" string="Certificado en formato .pfx con contraseña:"/>
            <field name="facturae_cert" />
            <newline />
            <field name="facturae_cert_password" password="True" placeholder="Aquí la contraseña del certificado"/>
          </page>
        </xpath>           
      </field>		  
    </record>	  	 	  
  </data>
</openerp>