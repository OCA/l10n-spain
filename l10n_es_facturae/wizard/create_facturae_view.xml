<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="wizard_create_facturae">
            <field name="name">create.facturae.form</field>
            <field name="model">create.facturae</field>
            <field name="arch" type="xml">
                <form string="Create Factura-E">
                    <h4 colspan="4">Este proceso creará la factura electrónica</h4>
                    <field name="state" invisible="1"/>
                    <group attrs="{'invisible': [('state', '=', 'second')]}" colspan="4">
                        <field name="firmar_facturae" />
                    </group>
                    <group attrs="{'invisible': [('state', '=', 'first')]}" colspan="4">
                        <field name="note" colspan="4" nolabel="1" readonly="1"/>
                        <field name="facturae" filename="facturae_fname" nolabel="1"/>
                        <field name="facturae_fname" invisible="1"/>
                    </group>
                    <footer>
                        <button icon="print"
                                name="create_facturae_file"
                                string="Export"
                                type="object"
                                states="first"
                                class="oe_highlight"/>
                        <span states="first">or</span>
                        <button string="Close"
                                class="oe_link"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window name="Create Factura-E file"
                    res_model="create.facturae"
                    src_model="account.invoice"
                    view_mode="form"
                    target="new"
                    id="wizard_create_facturae_act_window"
        />
    </data>
</odoo>
