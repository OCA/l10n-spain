<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

        <record model="ir.ui.view" id="l10n_es_facturae.res_company_form">
            <field name="name">l10n_es_facturae.res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Configuration']" position="after">
                    <page string='Factura-E' name="page_facturae">
                        <group>
                            <field name="facturae_cert" />
                            <field name="facturae_cert_password"
                                   password="True"
                                   placeholder="Ponga aquí la contraseña del certificado"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

  </data>
</openerp>
