                        <field name="unidad_tramitadora" attrs="{'invisible': [('facturae', '=', False)], 'required': [('facturae', '=', True)]}"/>
                        <field name="oficina_contable" attrs="{'invisible': [('facturae', '=', False)], 'required': [('facturae', '=', True)]}"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
