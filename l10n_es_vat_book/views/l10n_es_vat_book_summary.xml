<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_vat_book_summary_form" model="ir.ui.view">
    <field name="name">view.l10n_es_vat_book_summary.form</field>
    <field name="model">l10n.es.vat.book.summary</field>
    <field name="arch" type="xml">
      <form string="Summary">
        <sheet>
          <group name="main">
            <field name="book_type"/>
            <field name="special_tax_group"/>
            <field name="base_amount"/>
            <field name="tax_amount" />
            <field name="total_amount" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_vat_book_summary_tree" model="ir.ui.view">
    <field name="name">view.l10n_es_vat_book_summary.tree</field>
    <field name="model">l10n.es.vat.book.summary</field>
    <field name="arch" type="xml">
      <tree string="Summary" decoration-muted="special_tax_group">
            <field name="book_type"/>
            <field name="special_tax_group"/>
            <field name="base_amount"/>
            <field name="tax_amount" />
            <field name="total_amount" />
      </tree>
    </field>
  </record>

</odoo>
