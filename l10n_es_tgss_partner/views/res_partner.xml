<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<record id="partner_form" model="ir.ui.view">
    <field name="name">Add TGSS fields to contacts</field>
    <field name="model">res.partner</field>
    <field name="inherit_id"
           ref="partner_contact_personal_information_page.personal_information"/>
    <field name="arch" type="xml">
        <data>
            <!-- Fields for all partners -->
            <xpath expr="//field[@name='website']" position="after">
                <field name="contribution_account"/>
            </xpath>

            <!-- Fields only for contact partners -->
            <xpath expr="//group[@name='personal_information_group']">
                <group>
                    <field name="affected_by_terrorism"/>
                    <field name="affected_by_gender_violence"/>
                    <field name="disability_percentage" class="oe_inline"/>
                </group>
                <group>
                    <field name="contribution_group_id"/>
                    <field name="professional_category_id"/>
                    <field name="study_level_id"/>
                </group>
            </xpath>
        </data>
    </field>
</record>

</data>
</openerp>
