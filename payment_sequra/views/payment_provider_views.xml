<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Sequra Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group attrs="{'invisible': [('code', '!=', 'sequra')]}">
                    <field name="sequra_user" string="API Username" attrs="{'required': [('code', '=', 'sequra'), ('state', '!=', 'disabled')]}"/>
                    <field name="sequra_pass" string="API Password" attrs="{'required': [('code', '=', 'sequra'), ('state', '!=', 'disabled')]}" password="True"/>
                    <field name="sequra_merchant" string="Merchant ref" attrs="{'required': [('code', '=', 'sequra'), ('state', '!=', 'disabled')]}" />
                </group>
            </group>
        </field>
    </record>

</odoo>