    <record id="l10n_es_sigaus_purchase_order_form" model="ir.ui.view">
        <field name="name">l10n.es.sigaus.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <div name="reminder" position="after">
                <field name="sigaus_company" invisible="1" />
                <field
                    name="is_sigaus"
                    attrs="{'readonly': [('state', 'not in', ['draft', 'sent'])], 'invisible': [('sigaus_company', '=', False)]}"
                />
            </div>
        </field>
    </record>
</odoo>
