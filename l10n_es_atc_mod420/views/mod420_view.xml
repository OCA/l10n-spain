<odoo>
    <record id="view_l10n_es_aeat_mod420_report_tree" model="ir.ui.view">
        <field name="name">l10n_es.aeat.mod420.report.tree</field>
        <field name="model">l10n.es.aeat.mod420.report</field>
        <field name="inherit_id" ref="l10n_es_aeat.view_l10n_es_aeat_report_tree" />
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="string">ATC 420 reports</attribute>
            </tree>
            <field name="period_type" position="after">
                <field name="total_devengado" />
                <field name="total_deducir" />
                <field name="diferencia" />
                <field name="resultado_liquidacion" />
            </field>
        </field>
    </record>
    <record id="view_l10n_es_aeat_mod420_report_form" model="ir.ui.view">
        <field name="name">l10n_es.aeat.mod420.report.form</field>
        <field name="model">l10n.es.aeat.mod420.report</field>
        <field name="inherit_id" ref="l10n_es_aeat.view_l10n_es_aeat_report_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(l10n_es_aeat.action_wizard_aeat_export)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="export_config_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <group name="group_declaration" position="after">
                <group string="Resultado" name="group_result" attrs="{'invisible': [('state', '=', 'draft')]}" colspan="4" col="6">
                    <group>
                        <field name="rectificacion_repercutida" widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <field name="total_devengado" widget="monetary" options="{'currency_field': 'currency_id'}" />
                    </group>
                    <group>
                        <field name="casilla_18" widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <field name="casilla_19" widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <field name="casilla_20" widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <field name="rectificacion_soportada" widget="monetary" options="{'currency_field': 'currency_id'}" />
                    </group>
                    <group>
                        <field name="total_deducir" widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <field name="diferencia" widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <field name="cuota_compensar" widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <field name="a_deducir" widget="monetary" options="{'currency_field': 'currency_id'}" />
                    </group>
                </group>
                <group class="oe_subtotal_footer oe_right" attrs="{'invisible': [('state', '=', 'draft')]}" colspan="2">
                    <field name="resultado_liquidacion" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}" />
                    <field name="result_type" />
                </group>
                <group string="Tax lines" name="group_tax_lines" colspan="4" attrs="{'invisible': [('state', '=', 'draft')]}">
                    <field name="tax_line_ids" nolabel="1" readonly="1" />
                </group>
            </group>
        </field>
    </record>
    <record id="action_l10n_es_aeat_mod420_report" model="ir.actions.act_window">
        <field name="name">ATC model 420</field>
        <field name="res_model">l10n.es.aeat.mod420.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help">Create and query ATC Model 420 reports</field>
    </record>
    <record model="ir.actions.act_window.view" id="action_l10n_es_aeat_mod420_report_tree">
        <field name="sequence" eval="2" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_l10n_es_aeat_mod420_report_tree" />
        <field name="act_window_id" ref="action_l10n_es_aeat_mod420_report" />
    </record>
    <record model="ir.actions.act_window.view" id="action_l10n_es_aeat_mod420_report_form">
        <field name="sequence" eval="3" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_l10n_es_aeat_mod420_report_form" />
        <field name="act_window_id" ref="action_l10n_es_aeat_mod420_report" />
    </record>
    <menuitem id="menu_aeat_mod420_report" parent="l10n_es_aeat.menu_root_aeat" sequence="420" name="ATC 420 model" action="action_l10n_es_aeat_mod420_report" />
</odoo>
